<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shop Products â€” Sustainably</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/logo.webp" type="image/webp">
</head>
<body>

    <header class="topbar">
        <nav class="nav container">
            <a class="brand" href="/">
                <span class="brand-name">Simply Kitchenware & Dining</span>
            </a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/products">Shop</a>
            </div>
        </nav>
    </header>

    <main class="container section">
    <div class="section-head">
        <h1 class="section-title">Shop All Products</h1>
        <p class="section-sub">Eco-friendly kitchen essentials for a cleaner home.</p>
    </div>

   <div class="products">
    <% products.forEach(product => { %>
        <article class="product-card">
            <div class="product-img">
                <img src="/images/home.webp" alt="<%= product.productName %>">
            </div>

            <div class="product-info">
                <h3 class="product-name"><%= product.productName %></h3>
                <p class="product-desc"><%= product.productDescription %></p>
                <p class="price">$<%= product.price %></p>
                
                <div class="card-actions">
                    <button class="button primary small">Add to Cart</button>
                    
                    <a href="/products/<%= product.productId %>" class="details-link">
                        View Details 
                    </a>
                </div>
            </div>
        </article>
    <% }) %>
</div>
</main>
</body>
</html>